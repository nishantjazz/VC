# --- Base stage ---
FROM node:18-alpine AS base
WORKDIR /app
COPY package*.json ./
RUN npm install

# --- Dev stage ---
FROM base AS dev
WORKDIR /app
COPY . .
EXPOSE 3000
CMD ["npm", "start"]

# --- Prod stage ---
FROM base AS prod
WORKDIR /app
COPY . .
RUN npm run build

FROM nginx:1.25-alpine AS prod-server
COPY --from=prod /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
